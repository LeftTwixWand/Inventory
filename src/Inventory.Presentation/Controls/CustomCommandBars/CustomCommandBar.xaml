<UserControl
    x:Class="Inventory.Presentation.Controls.CustomCommandBars.CustomCommandBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <CommandBar
        Height="46"
        DefaultLabelPosition="Right">

        <AppBarButton Label="Add" HorizontalAlignment="Left">
            <AppBarButton.Icon>
                <BitmapIcon UriSource="ms-appx:///Inventory.Presentation/Assets/Icons/Add.png" ShowAsMonochrome="False"/>
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Label="Edit" HorizontalAlignment="Left">
            <AppBarButton.Icon>
                <BitmapIcon UriSource="ms-appx:///Inventory.Presentation/Assets/Icons/Edit.png" ShowAsMonochrome="False"/>
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Label="Cancel" HorizontalAlignment="Left">
            <AppBarButton.Icon>
                <BitmapIcon UriSource="ms-appx:///Inventory.Presentation/Assets/Icons/Cancel.png" ShowAsMonochrome="False"/>
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Label="Delete" HorizontalAlignment="Left">
            <AppBarButton.Icon>
                <BitmapIcon UriSource="ms-appx:///Inventory.Presentation/Assets/Icons/Delete.png" ShowAsMonochrome="False"/>
            </AppBarButton.Icon>
        </AppBarButton>

    </CommandBar>
</UserControl>