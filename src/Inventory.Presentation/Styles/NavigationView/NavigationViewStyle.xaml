<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Style x:Key="NavigationViewStyle" TargetType="NavigationView">
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        <Setter Property="IsTitleBarAutoPaddingEnabled" Value="True" />
        <Setter Property="IsSettingsVisible" Value="False" />
        <Setter Property="IsBackButtonVisible" Value="Collapsed" />
        <Setter Property="IsBackEnabled" Value="False" />
        <Setter Property="CompactModeThresholdWidth" Value="640" />
        <Setter Property="ExpandedModeThresholdWidth" Value="1008" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="AlwaysShowHeader" Value="True" />
        <Setter Property="IsPaneToggleButtonVisible" Value="True" />
        <Setter Property="AlwaysShowHeader" Value="True" />
    </Style>

</ResourceDictionary>