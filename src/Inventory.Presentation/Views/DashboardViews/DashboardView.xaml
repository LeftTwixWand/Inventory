<Page
    x:Class="Inventory.Presentation.Views.DashboardViews.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:dashboardViewModels="using:Inventory.Application.ViewModels.DashboardViewModels"
    xmlns:panes="using:Inventory.Presentation.Views.DashboardViews.Panes"
    d:DataContext="{d:DesignInstance Type=dashboardViewModels:DashboardViewModel}"
    Style="{StaticResource PageStyle}">

    <GridView ItemContainerStyle="{StaticResource SpasingGridViewItemStyle}">

        <panes:CustomerPane
            Width="600"
            Height="270"
            ItemsSource="{x:Bind ViewModel.Customers, Mode=OneWay}" />

        <panes:OrdersPane
            Width="600"
            Height="270"
            ItemsSource="{x:Bind ViewModel.Orders, Mode=OneWay}" />

        <panes:ProductsPane
            Width="600"
            Height="270"
            ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}" />

    </GridView>

</Page>